@model Somativa.Models.Fornecedor

@{
    ViewData["Title"] = "Criar Fornecedor";
}

<h1 class="text-center">Criar Fornecedor</h1>

<hr />
<div class="row" style="display:flex; justify-content:center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <button class="btn text-white" style="background-color:darkblue" asp-action="Create">Salvar</button>
                <a class="btn btn-secondary ms-3" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
