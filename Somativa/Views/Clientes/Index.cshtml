@model IEnumerable<Somativa.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<div class="w-50 mt-2">
    <a asp-action="Create" class="btn text-white" style="background-color:darkblue">Criar Novo</a>
</div>

<table class="table table-striped table-hover table-bordered mt-5">
    <thead class="table table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td class="text-center">

                    <a class="btn" asp-action="Edit" asp-route-id="@item.ClienteId">
                        <svg bootstrap-icon="Pencil" width="20" height="20"></svg>
                    </a>
                    <a class="btn" asp-action="Details" asp-route-id="@item.ClienteId">
                        <svg bootstrap-icon="FileEarmarkMedical" width="20" height="20"></svg>
                    </a>
                    <a asp-action="Delete" class="btn" asp-route-id="@item.ClienteId" data-bs-toggle="modal" data-bs-target="#exampleModal_@item.ClienteId"
                       data-bs-tittle="Excluir"
                       data-bs-placement="bottom">
                        <svg bootstrap-icon="Trash" width="20" height="20"></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
{
    <div class="modal fade" id="exampleModal_@item.ClienteId" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Deletar</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que você deseja excluir?</p>
                    <dl class="row text-center">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Endereco)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.Endereco)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Telefone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.Telefone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cpf)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.Cpf)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nascimento)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.Nascimento)
                        </dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" class="text-white" asp-route-id="@item.ClienteId">
                        <input type="hidden" asp-for="@item.ClienteId" />
                        <button type="button" class="btn btn-secondary mt-2" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" value="Apagar" class="btn btn-danger mt-2 ms-2">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
